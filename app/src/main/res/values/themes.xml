<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PhotoFilterApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorOnPrimary">@color/theme_onPrimary</item>
        <item name="android:colorBackground">@color/theme_background</item>
        <item name="colorOnBackground">@color/theme_onBackground</item>
        <item name="colorSurface">@color/theme_surface</item>
        <item name="colorOnSurface">@color/theme_onSurface</item>
        <item name="colorError">@color/theme_error</item>
        <item name="colorOnError">@color/theme_onError</item>
    </style>

    <style name="Theme.PhotoFilterApp.Splashscreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/theme_surface</item>
        <item name="windowSplashScreenAnimationDuration">100</item>
        <item name="postSplashScreenTheme">@style/Theme.PhotoFilterApp</item>
    </style>


    <style name="Theme.PhotoFilterApp" parent="Base.Theme.PhotoFilterApp" />
</resources>